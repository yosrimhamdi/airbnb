{% extends 'base.html.twig' %}

{% block title %}Nos magnifiques annonces{% endblock %}

{% block body %}
    <h1>Voici les annonces de note hotes!</h1>
    <div class="row">
        {% for ad in ads %}
            <div class="col-md-4">
                <div class="card bg-light mb-3">
                <div class="card-header">
                    {{ ad.price }} &euro; / nuit |
                    {% if ad.rooms > 1 %}
                        {{ ad.rooms }} chambres
                    {% else %}
                        {{ ad.rooms }} chambre
                    {% endif %}
                </div>
                    <img style="height: 200px; width: 100%; display: block;" src="{{ ad.coverImage }}" alt="Card image">

                <div class="card-body">
                    <h4 class="card-title">{{ ad.title }}</h4>
                    <p class="card-text">{{ ad.introduction }}</p>
                    <a href="{{ null }}" class="btn btn-primary float-right">En savoir plus !</a>
                </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
